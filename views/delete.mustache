<html lang="en">
  <head>
    {{>head}}
  </head>
  <body class="bg-dark">
    {{>navbar}}
    <main>
      <section class="py-5 text-center container">
        <div class="row py-lg-5">
          <div class="col-lg-6 col-md-8 mx-auto text-white">
            <h1 class="fw-light">Edit Goal page</h1>
            <p class="lead text-body-white">This Goal Tracker is designed to track your progress in three categories: Fitness, Nutrition and Lifestyle.</p>
          </div>
        </div>
      </section>
    
      <div class="album py-5 bg-body-tertiary">
        <div class="container">
          <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 justify-content-center">

            {{#goals}}
            <form method="POST">
            <div class="col align-self-center">
              <div class="card shadow-lg">
                <div class="card-body">
                    <div class="mb-3">
                        <h2 class="text-center">Are you sure you want to delete this goal?</h2>
                    </div>
                      
                  <div class="d-flex align-items-center justify-content-center text-center ">
                    <input class="btn btn-danger me-2" type="submit" value="Yes"/>

                    <a class="btn btn-secondary ms-2" href="/goals">No</a>
                  </div>    
                </div>
              </div>
            </div>
             </form>
            {{/goals}}
          </div>
      </div>
    
    
    </main>
  </body>
</html>
