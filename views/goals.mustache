<html lang="en">
  <head>
    {{>head}}
  </head>
  <body class="bg-dark">
    {{>navbar}}
    <main>
      <section class="py-5 text-center container">
        <div class="row py-lg-5">
          <div class="col-lg-6 col-md-8 mx-auto text-white">
            <h1 class="fw-light">Goal Tracker</h1>
            <p class="lead text-body-white">This Goal Tracker is designed to track your progress in three categories: Fitness, Nutrition and Lifestyle.</p>
          </div>
        </div>
      </section>
    
      <div class="album py-5 bg-body-tertiary">
        <div class="container">
          <a class="btn btn-primary my-2" data-bs-toggle="modal" data-bs-target="#Add" data-bs-whatever="@mdo">New Entry</a>
          {{>goalModalAdd}}

          <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            
            {{#goals}}
            <div class="col">
              {{#finished}}
              <div class="card shadow-sm {{finished}} border-success">
              {{/finished}}
              {{^finished}}
              <div class="card shadow-sm {{finished}} border-warning">
              {{/finished}}
                <img class="card-img-top" width="100%" height="225" src="img/{{type}}.jpg" >
                <div class="card-body">
                  <p class="card-text">{{description}}</p>
                  <div class="d-flex justify-content-between align-items-center">
                   
                    <div class="btn-group">
                      <a type="button" class="btn btn-sm btn-outline-secondary"  data-bs-toggle="modal" data-bs-target="#{{_id}}" data-bs-whatever="@mdo" >View</a>
                      <a type="button" class="btn btn-sm btn-outline-secondary" href="/edit/{{_id}}">Edit</a>
                      {{>goalModal}}
                    </div>
                
                    <p class="mt-3 card-text text-muted">{{published}}</p>
                    <h2>{{name}}</h2>
                  </div>
                </div>
              </div>
            </div>
            {{/goals}}
          </div>
      </div>
    
    </main>
  </body>
</html>
