<html lang="en">
  <head>
    {{>head}}
  </head>
  <body class="bg-dark">
    {{>navbar}}
    <main>
      <section class="py-5 text-center container">
        <div class="row py-lg-5">
          <div class="col-lg-6 col-md-8 mx-auto text-white">
            <h1 class="fw-light">Goal Tracker</h1>
            <p class="lead text-body-white">This Goal Tracker is designed to track your progress in three categories: Fitness, Nutrition and Lifestyle.</p>
          </div>
        </div>
      </section>
    
      <div class="album py-5 bg-body-tertiary">
        <div class="container">
          <a class="btn btn-primary my-2">New</a>
          <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

            {{#goals}}
            <div class="col">
              <div class="card shadow-sm">
                <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"></rect><text x="50%" y="50%" fill="#eceeef">Hello</text></svg>
                <div class="card-body">
                  <p class="card-text">{{description}}</p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                      <button type="button" class="btn btn-sm btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#{{name}}" data-bs-whatever="@mdo">Edit</button>
                      <button type="button" class="btn btn-sm btn-outline-secondary">Delete</button>
                      {{>goalModal}}
                    </div>
                    <h2>{{name}}</h2>
                  </div>
                </div>
              </div>
            </div>
            {{/goals}}
          </div>
      </div>
    
    </main>
  </body>
</html>
