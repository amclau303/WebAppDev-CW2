<html lang="en">
  <head>
    {{>head}}
  </head>
  <body class="bg-dark">
    {{>navbar}}
    <main>
      <section class="py-5 text-center container">
        <div class="row py-lg-5">
          <div class="col-lg-6 col-md-8 mx-auto text-white">
            <h1 class="fw-light">Edit Goal page</h1>
            <p class="lead text-body-white">This Goal Tracker is designed to track your progress in three categories: Fitness, Nutrition and Lifestyle.</p>
          </div>
        </div>
      </section>
    
      <div class="album py-5 bg-body-tertiary">
        <div class="container">
          <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 justify-content-center">

            {{#goals}}
            <form method="POST">
            <div class="col align-self-center">
              <div class="card shadow-lg">
                <div class="card-body">
                    <div class="mb-3">
                        <label for="name" class="form-label">Title</label>
                        <textarea type="text" class="form-control" name="name" id="name" placeholder="{{name}}">{{name}}</textarea>
                      </div>
                      <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea type="text" class="form-control" name="description" id="description" rows="3" placeholder="{{description}}">{{description}}</textarea>
                      </div>
                      <div class="mb-3">
                        <div class="dropdown">
                          <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Type
                          </button>
                          <ul class="dropdown-menu" required name="type">
                            <li class="list-group-item ms-2">
                              <input class="form-check-input me-1" type="radio" name="type" value="Fitness" id="type">
                              <label class="form-check-label" for="Fitness" >Fitness</label>
                            </li> 
                            <li class="list-group-item ms-2">
                              <input class="form-check-input me-1" type="radio" name="type" value="Nutrition" id="type">
                              <label class="form-check-label" for="Nutrition" >Nutrition</label>
                            </li>
                            <li class="list-group-item ms-2" name=type>    
                              <input class="form-check-input me-1" type="radio" name="type" value="Lifestyle" id="type">
                              <label class="form-check-label" for="Lifestyle" >Lifestyle</label></li>
                          </ul>
                          <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Finished?
                          </button>
                          <ul class="dropdown-menu">
                            <li class="list-group-item ms-2">
                              <input class="form-check-input me-1" type="radio" name="finished" value="true" id="finished">
                              <label class="form-check-label" for="true" >True</label>
                            </li> 
                            <li class="list-group-item ms-2">
                              <input class="form-check-input me-1" type="radio" name="finished" value="false" id="finished">
                              <label class="form-check-label" for="false" >False</label>
                            </li>
                          </ul>
                        </div>

                      </div>


                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                        <textarea class="form-control edit-published" id="published" rows="1" name="published" id="published" disabled>Published: {{published}}</textarea>
                    </div>
                    <a class="btn btn-danger" href="/delete/{{_id}}">Delete</a>
                    <input class="btn btn-primary" type="submit" value="Update"></input>
        
                  </div>    
                </div>
              </div>
            </div>
             </form>
            {{/goals}}
          </div>
      </div>
    
    
    </main>
  </body>
</html>
